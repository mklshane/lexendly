{
  "manifest_version": 3,
  "name": "Lexendly",
  "version": "1.0",
  "description": "Helps dyslexic users read comfortably by adjusting fonts, colors, and layout.",
  "action": {
    "default_popup": "popup/index.html",
    "default_icon": "icon.png"
  },
  "permissions": ["storage", "scripting", "activeTab"],
  "background": {
    "service_worker": "src/background/background.ts"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content/content.ts"]
    }
  ]
}
