{
  "compilerOptions": {
    "types": ["node", "chrome"],
    "target": "ESNext",
    "lib": ["DOM", "ESNext"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "jsx": "react-jsx",
    "baseUrl": "./src",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "ignoreDeprecations": "6.0"
  },
  "include": ["src", "vite.config.ts", "popup"],
  "exclude": ["node_modules", "dist"]
}
